{
  "name": "bun-auth",
  "version": "1.0.50",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "NODE_ENV=production bun run dist/index.js",
    "healthcheck": "curl -f http://localhost:3333/health || exit 1",
    "db:generate": "bun --env-file .env --bun drizzle-kit generate",
    "db:migrate": "bun --env-file .env --bun drizzle-kit migrate",
    "db:studio": "bun --env-file .env --bun drizzle-kit studio",
    "db:drop-all": "bun --env-file .env scripts/drop-all-tables.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@better-auth/passkey": "^1.4.9",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.10",
    "better-auth": "^1.4.9",
    "drizzle-orm": "^0.44.5",
    "elysia": "latest",
    "pg": "^8.16.3",
    "resend": "^6.6.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.31.4"
  },
  "module": "src/index.js"
}